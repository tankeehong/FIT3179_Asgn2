{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 500,
    "title": "Earthquakes of magnitude 5.5 or larger between 4 2020 and 10 Oct 2020",
    "data": {
    "url": "https://raw.githubusercontent.com/tankeehong/FIT3179_Asgn2/main/database.csv"
    },
    "mark":{"type": "circle"},
    "encoding": {
        "x": {"field": "Depth", "type": "quantitative"},
        "y": {"field": "Magnitude", "type": "quantitative","scale": {"domain": [5, 10]}},
        "tooltip": [{"field": "datum.Year"},{"field":"datum.Magnitude","type":"quantitative"},{"field":"datum.Depth","type":"quantitative"}],
        "size": {"field": "Magnitude", "type": "quantitative","scale": {"domain": [5.5, 9.5], "range":[10, 100, 5000]}},
        "color": {"field": "Magnitude","type": "quantitative", "scale": {"scheme": "redyellowblue"},"sort": "descending"}
    }
}