{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
     "width": 1000,
     "height": 800,
     "data": {
         "url": "https://raw.githubusercontent.com/tankeehong/FIT3179_Asgn2/main/data/database_final.csv"
     },
     "params":[
        {
            "name": "year_selected",
            "value": 2007,
            "bind": {"input": "range", "min": 1965, "max": 2016, "step": 1, "name": "Year: "}
            
        }
    ],
     "projection": {"type": "mercator", "scale": 500, "rotate": [0, 0, 0],"center": [105, 15]},
   
     "layer": [
       {
           "data": {
           "url":
           "https://raw.githubusercontent.com/tankeehong/FIT3179_Asgn2/main/code/ne_50m_admin_0_countries.json"
           ,
           "format": {"type": "topojson", "feature": "ne_50m_admin_0_countries"}
           },
           "mark": {"type": "geoshape", "fill": "gray", "stroke": "white"}
       },
       {
         "mark": {"type": "circle", "tooltip": {"content": "data"}},
         "transform": [
            {"filter": {"field": "Type", "equal": "Earthquake"}},
            {"filter": {"field": "Longitude", "gte": 60}},
            {"filter": {"field": "Latitude", "lte": 60}},
            {"filter": "datum.Year == year_selected"}
        ],
         "encoding": {
           "longitude": {"field": "Longitude", "type": "quantitative"},
           "latitude": {"field": "Latitude", "type": "quantitative"},
           "size": {
             "field": "Magnitude",
             "type": "quantitative",
             "scale": {"domain": [5.5, 9.5], "range":[10, 500, 5000]}
           },
           "color": {
                      "field": "Depth",
                      "type": "quantitative",
                      "scale": {"scheme": "lightmulti"
                      }
           }
         }
       }
     ]
   }